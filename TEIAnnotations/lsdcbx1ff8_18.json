                  "body": {
                    "type": "TextualBody",
                    "value": "<p rend=\"align(right)\">\n                                        <placeName>New York</placeName>\n                                        <date>Saturday night 15/2 5611</date>\n                              </p>\n                              <p>To the <addressee>Revd I Leeser</addressee></p>\n                              <p rend=\"indent(1)\">Dr Sir!</p>\n                              <p rend=\"indent(2)\">I send you herewith Two Dollars and beg<lb/> you\n                                        will insert in <hi rend=\"underline\">next</hi> &amp; <hi\n                                                  rend=\"underline\">following monthly</hi><lb/>\n                                        <sic>Oxident</sic> the <sic>inclosed</sic> advertisement,\n                                        and oblige,<lb/> (if sufficient) yours Respectfully</p>\n                              <p rend=\"indent(3)\">\n                                        <persName role=\"author\">A Loewe</persName>\n                              </p>"
                  },
                  "target": "https://colenda.library.upenn.edu/items/ark:/81431/p3mw2912f/canvas/p1"
