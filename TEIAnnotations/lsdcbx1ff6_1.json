                  "body": {
                    "type": "TextualBody",
                    "value": "<p rend=\"align(righ)\">\n                                        <placeName>Baltimore</placeName>\n                                        <date>Jany 3 1849</date>\n                              </p>\n                              <p>\n                                        <addressee>Mr Isaac Leeser</addressee>\n                              </p>\n                              <p rend=\"indent(2)\">Revd Sir I this moment<lb/> Recd By Adams &amp; Co\n                                        Express line a Parcel<lb/> of Books and paid the freight I\n                                        shall use<lb/> all exertions to make sale of them<lb/> and\n                                        as soon as I have made sale<lb/> I shall\n                                                  <sic>Imediately</sic>\n                                        <sic>remitt</sic> you the<lb/> Proceeds money is a little\n                                        scarce<lb/> But the people must have time to<lb/> consider\n                                        nothing more at Presnt</p>\n                              <p rend=\"indent(4)\">But Remains yours</p>\n                              <p rend=\"indent(4)\">\n                                        <persName role=\"author\">S. Isaacs</persName>\n                              </p>"
                  },
                  "target": "https://colenda.library.upenn.edu/items/ark:/81431/p3b27q746/canvas/p1"
