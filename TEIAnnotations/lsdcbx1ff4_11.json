                  "body": {
                    "type": "TextualBody",
                    "value": "<p rend=\"align(right)\">\n                                        <placeName>Cincinnati</placeName>\n                                        <date>July 31<hi rend=\"sup\">st</hi> 1847</date>\n                              </p>\n                              <p>\n                                        <addressee>Revd Isaac Leeser</addressee>\n                              </p>\n                              <p rend=\"indent(2)\">Dear Sir I herewith<lb/> take the pleasure of\n                                        introducing to you<lb/> my particular <sic>freind</sic> a a\n                                                  <persName>Lindo Esqr</persName><lb/> of this city\n                                        every attention shown him by<lb/> you will be duly\n                                        appreciated by your</p>\n                              <p rend=\"indent(9)\">\n                                        <sic>Freind</sic>\n                              </p>\n                              <p rend=\"indent(10)\">\n                                        <persName role=\"author\">Elias Mayer</persName>\n                              </p>"
                  },
                  "target": "https://colenda.library.upenn.edu/items/ark:/81431/p38c9rt5z/canvas/p1"
