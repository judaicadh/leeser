                {
                  "id": "https://colenda.library.upenn.edu/items/ark:/81431/p3kw58426/manifest/annotation/p3",
                  "type": "Annotation",
                  "motivation": "commenting",
                  "body": {
                    "type": "TextualBody",
                    "value": "<p>I hope I shall soon have the pleasure<lb/> of hearing from you</p>\n            <p rend=\"indent(1)\">In the hope that this will meet<lb/> you in health, happiness &amp;\n                prosperity</p>\n            <p rend=\"indent(8)\">Believe me</p>\n            <p rend=\"indent(8)\">Yours truly</p>\n            <p rend=\"indent(9)\">\n                <persName role=\"author\">H. A. Henry</persName>\n            </p>\n        </body>\n    </text>\n</TEI>"
                  },
                  "target": "https://colenda.library.upenn.edu/items/ark:/81431/p3kw58426/canvas/p3"
