                    "value": "<p rend=\"align(right)\">\n                                        <placeName>Baltimore</placeName>\n                                        <date>Dec 5<hi rend=\"sup\">th</hi> 1847</date>\n                              </p>\n                              <p>Dr Sir</p>\n                              <p rend=\"indent(1)\">Your favor of the 3rd inst recdâ€“I hand<lb/> you\n                                        herein Three Dollars the amount of my<lb/> subscription to\n                                        the \"Occident\" from <date>April 1847</date><lb/> to\n                                                  <date>March 1848</date> as per your letter.</p>\n                              <p rend=\"indent(9)\">Yours truly</p>\n                              <p rend=\"indent(9)\">\n                                        <persName role=\"author\">M. I. Cohen</persName>\n                              </p>\n                              <p>To the</p>\n                              <p rend=\"indent(1)\">\n                                        <addressee>Revd Isaac Leeser</addressee>\n                              </p>\n                              <p rend=\"indent(1)\">\n                                        <placeName>Philadelphia</placeName>\n                              </p>"
